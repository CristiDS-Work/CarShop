<Window x:Class="CarShop.ClientCarsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarShop"
        mc:Ignorable="d"
        Title="Car Shop: Client's Cars" Height="450" Width="800"
        Icon="/Images/Icons/app_icon.png">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Images/background-image.jpg" Stretch="UniformToFill"/>
        </Grid.Background>
        <StackPanel Background="#AA000000" Orientation="Vertical">
            <Label Foreground="White" FontSize="20px" FontWeight="Bold" x:Name="ListTitle">Vehicles list</Label>
            <StackPanel Orientation="Horizontal">
                <Label Foreground="White">Add vehicle - enter vehicle ID:</Label>
                <TextBox Width="75px" x:Name="CarID_Input"></TextBox>
                <Button Click="ClientAddVehicle_onClick">Add vehicle</Button>
            </StackPanel>
            <Grid x:Name="MainGrid">

            </Grid>
        </StackPanel>
        
    </Grid>
</Window>
